mixin mycard(item)
  div.mycardcontainer
    div.mycard
      h2 #{item.name}
      img(src=item.icon)
      div#botinvite
        if (item.managed)
          a(href='/manage/' + item.id)
            button Manage
        else
          a(href='https://discord.com/oauth2/authorize?client_id=1025493075243585587&permissions=536874049&scope=bot&guild_id=' + item.id)
            button Create

mixin card(item)
  div.cardcontainer
    div.card
      div.left
        img(src=item.icon)
        span 👨🏻‍🤝‍👨🏻 #{item.memberCount}
      div.right
        h2 #{item.name}
        div#description #{item.description}
        div#categories
          if (item.categories)
            each category in item.categories || []
              span ##{category}
          else
            span &nbsp;
          
    